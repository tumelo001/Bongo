@model ResetPassword
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Reset password";
}

<div class="account-forms position-relative shadow mt-5 ">
    <div class="mb-3 text-center">
        <h4 class="fw-bold">Reset Password</h4>
        <p>Please enter your credentials</p>
    </div>
    <form class="mb-4" asp-action="ResetPassword" asp-controller="Account" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Token" />
        <input type="hidden" asp-for="UserId" />
        <div class="mb-4">
            <label class="form-label" asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" class="form-control" asp-for="Password" />
        </div>
        <div class="mb-5">
            <label class="form-label" for="password_login" asp-for="ConfirmPassword"></label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <input type="password" class="form-control" id="password_login" asp-for="ConfirmPassword" />

        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Reset</button>
        </div>
    </form>
    <div class="form-footer-terms my-4 text-center">
        By signing in, you agree to Bongo's <br />
        <a class="text-decoration-none text-black fw-bold" data-bs-toggle="modal" data-bs-target="#termsModal">
            Terms and conditions
        </a>
        <a class="text-decoration-none text-black fw-bold" data-bs-toggle="modal" data-bs-target="#privacyModal">
            | Privacy policy
        </a>
    </div>
    <a class=" text-decoration-none" asp-controller="Account" asp-action="Login"><i class="fa-solid fa-arrow-left fa-xl me-2"></i>Back</a>
</div>