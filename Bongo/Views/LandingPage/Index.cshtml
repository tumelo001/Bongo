@model IEnumerable<UserReview>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Bongo is a web app designed to simplify the process of creating timetables for students. Our goal is to help you optimize your schedule and make the most out of your academic journey.">
    <meta name="keywords" content="Bongo, timetable, scheduling, students, academic, optimization, web app, UFS">
    <meta name="author" content="Bongo">
    <meta name="robots" content="index, follow">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Bongo</title>
    <title>Bongo - Create Your Timetable</title>

    <link rel="stylesheet" href="/css/landingPage.css" />
    <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
          rel="stylesheet" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <link rel="manifest" href="/images/site.webmanifest">

</head>
<body class="">
    <header class="container-fluid px-5">
        <nav class="navbar navbar-expand-sm mx-sm-5 navbar-light">
            <a class="navbar-brand logo fs-1" href="#">Bongo</a>
            <button class="navbar-toggler d-lg-none"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapsibleNavId"
                    aria-controls="collapsibleNavId"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon text-dark"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavId">
                <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a href="#how-it-works-section" class="nav-link">How it works</a>
                    </li>
                    <li class="nav-item">
                        <a href="#testimonial" class="nav-link">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a href="#about" class="nav-link">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-primary mx-3" asp-controller="Session" asp-action="TimeTableFileUpload">@(User.Identity.IsAuthenticated ? "Back to Home" : "Get started")</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <section class="main-section container px-5">
        <div class="row mx-md-5">
            <div class="col-lg-6 mb-4">
                <h1>
                    Are you a Student tired of manually drafting your timetable every
                    semester?
                </h1>
                <p class="header-text">
                    Say no more, because Bongo will help you create your timetable in
                    just a few seconds.
                </p>
                <div class="w-100 text-center mb-4">
                    <a class="btn btn-outline-primary ms-auto"
                       asp-controller="Session" asp-action="TimeTableFileUpload" style="width: 180px !important;">@(User.Identity.IsAuthenticated ? "Back to Home" : "Get started")</a>
                </div>
            </div>
            <div class="col-lg-6 top-image">
                <img src="/images/top-image.gif" alt="image" />
            </div>
        </div>
    </section>

    <section class="how-it-works-section py-5 position-relative" id="how-it-works-section">
        <div class="break-section">
            😏
        </div>
        <div class="container pt-5">
            <h1 class="section-heading w-100 text-center text-primary fs-1">
                How It Works
            </h1>
            <p class="section-content mt-5 px-5 text-center">
                With Bongo, you can easily create and manage your personalized
                timetable. Just follow these simple steps:
            </p>
            <p class="section-content mt-5 px-5 text-danger text-center">
                ⚠ Please note that we'll never ask you of your student portal
                credentials. ⚠
            </p>
            <div id="carouselExampleDark"
                 class="carousel carousel-dark slide mb-5"
                 data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button"
                            data-bs-target="#carouselExampleDark"
                            data-bs-slide-to="0"
                            class="active"
                            aria-current="true"
                            aria-label="Slide 1"></button>
                    <button type="button"
                            data-bs-target="#carouselExampleDark"
                            data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                    <button type="button"
                            data-bs-target="#carouselExampleDark"
                            data-bs-slide-to="2"
                            aria-label="Slide 3"></button>
                    <button type="button"
                            data-bs-target="#carouselExampleDark"
                            data-bs-slide-to="3"
                            aria-label="Slide 4"></button>
                   
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active" data-bs-interval="10000">
                        <img src="images/how-to-use/step1.jpg"
                             class="d-block w-100"
                             alt="step1" />
                        <div class="carousel-caption">
                            <h5>Step 1</h5>
                            <p>Log into your student portal. Go to Student center.</p>
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="2000">
                        <img src="/images/how-to-use/step2.jpg"
                             class="d-block w-100"
                             alt="step2" />
                        <div class="carousel-caption">
                            <h5>Step 2</h5>
                            <p>Go to student documentation.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/how-to-use/step3.jpg"
                             class="d-block w-100"
                             alt="step3" />
                        <div class="carousel-caption">
                            <h5>Step 3</h5>
                            <p>Print your class timetable.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/how-to-use/step4.jpg"
                             class="d-block w-100"
                             alt="step4" />
                        <div class="carousel-caption">
                            <h5>Step 4</h5>
                            <p>Upload you class timetable to bongo.</p>
                        </div>
                    </div>
                   
                </div>
                <button class="carousel-control-prev"
                        type="button"
                        data-bs-target="#carouselExampleDark"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next"
                        type="button"
                        data-bs-target="#carouselExampleDark"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>

    <section class="testimonial-section py-5 position-relative" id="testimonial">
        <div class="break-section">
            🤩
        </div>
        <div class="container">
            <h2 class="section-heading text-center fs-1 mb-5 text-primary">Reviews</h2>
            <div id="carouselExampleInterval"
                 class="carousel slide mt-5 py-5"
                 data-bs-ride="carousel">
                <div class="carousel-inner text-center">
                    @{bool active = true;}
                    @foreach (var review in Model)
                    {
                        <div class="carousel-item @(active ? "active" : " ")" data-bs-interval="5000">
                            <div class="testimonial d-flex flex-column mx-auto">
                                <div class="d-flex">
                                    <div class="testimonial-profile">
                                        <img src="/images/profile.png" alt="testimonial-profile" />
                                    </div>
                                    <div class="testimonial-info mx-3">
                                        <div class="testimonial-author fs-5 fw-bold">@review.Username</div>
                                        <div class="testimonial-rating">
                                            @for (int i = 0; i < review.Rating; i++)
                                            {
                                                <i class="fa-solid fa-star"></i>
                                            }
                                            @for (int i = 0; i < (5 - review.Rating); i++)
                                            {
                                                <i class="fa-regular fa-star"></i>
                                            }
                                        </div>
                                        <div class="testimonial-date">
                                            <span class="text-muted">@review.ReviewDate.AddHours(6).ToShortDateString()</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="testimonial-content" style="margin-left: 77px;">
                                   @review.Review
                                </div>
                            </div>
                        </div>
                        active = false;
                    }
                </div>
                <button class="carousel-control-prev"
                        type="button"
                        data-bs-target="#carouselExampleInterval"
                        data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next"
                        type="button"
                        data-bs-target="#carouselExampleInterval"
                        data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="rate-us text-center mt-5 pt-3 text-dark">
                <p class="mb-3 fs-6">We want to hear from you. What are thoughts on the application?</p>
                <a asp-controller="UserReview" asp-action="AddReview" class="btn btn-primary mt-2" style="width: 180px !important;">
                    Review us
                </a>
            </div>
        </div>
    </section>

    <section class="about-section text-center position-relative p-5" id="about-us">
        <div class="break-section">
            😎
        </div>
        <div class="container d-flex justify-content-center">
            <div class="about" id="about">
                <p class="about-content">
                    Bongo is a web app designed to simplify the process of creating
                    timetables for students. Our goal is to help you optimize your
                    schedule and make the most out of your academic journey.
                </p>
                <p>
                    By Stu and Oliver 😎
                </p>
            </div>
        </div>
        <div class="container text-center">
            <div class="footer-contact">
                <p>
                    For any inquiries, please contact us: <a href="mailto:bongospprt@gmail.com"
                                                             class="text-decoration-none">Support Bongo</a>
                </p>
            </div>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container text-center">
                <a class="text-decoration-none text-muted " data-bs-toggle="modal" data-bs-target="#termsModal">
                    Terms and conditions
                </a>
                <a class="text-decoration-none text-muted" data-bs-toggle="modal" data-bs-target="#privacyModal">
                    | Privacy policy
                </a> | &copy; 2023 - Bongo v1
            </div>
        </footer>
    </section>
</body>
</html>

@await Html.PartialAsync("_TermsAndPrivacyModal")

